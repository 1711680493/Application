package shendi.test.wlan;

/**
 * 无线网络接口信息
 * @author Shendi
 */
public class WlanInterface {

	public final long GUID;
	public final String desc;
	public final int state;
	public final int index;
	
	public static final int not_ready = 0;
	public static final int connected = 1;
	public static final int ad_hoc_network_formed = 2;
	public static final int disconnecting = 3;
	public static final int disconnected = 4;
	public static final int associating = 5;
	public static final int discovering = 6;
	public static final int authenticating = 7;
	
	public WlanInterface(long GUID, String desc, int state, int index) {
		this.GUID = GUID;
		this.desc = desc;
		this.state = state;
		this.index = index;
	}
	
}
